<Window x:Class="RevitAddin1.Input"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitAddin1"
             mc:Ignorable="d" 
             DataContext="{x:Static local:Singleton.Instance}" SizeToContent="WidthAndHeight" Title="Input Form">
    <StackPanel  Orientation="Horizontal" Margin="7">
        <Label Content="Parameter Value:" HorizontalAlignment="Left"/>
        <TextBox Text="{Binding InputParameter}" 
                 Width="50" Margin="10 0 0 0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Button local:BaseAttachedProperty.OkClickedProperty="True" 
                Margin="10 0 10 0" Content="OK" Width="35" Height="20"/>
    </StackPanel>
</Window>
